<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.api.mapper.TaskHall.TaskCommMapper">
    <resultMap id="Comm" type="com.cloud.api.bean.vo.TaskCommentsVo">
        <id column="comm_id" property="commId"/>
        <result column="comm_content" property="commContent"/>
        <result column="comm_father_id" property="commFatherId"/>
        <result column="comm_time" property="commTime"/>
        <result column="open_id" property="openId"/>
        <association property="user" javaType="com.cloud.api.bean.vo.UserVo">
            <result column="user_id" property="userId"/>
            <result column="user_name" property="userName"/>
            <result column="open_id" property="openId"/>
            <result column="user_head_portrait" property="userHeadPortrait"/>
        </association>
    </resultMap>
    <select id="selectAll" resultMap="Comm">
                 select  tc.comm_id,tc.open_id,tc.comm_content,tc.comm_father_id,tc.comm_time,tc.task_id,tc.comm_father_id,u.open_id,u.user_name,u.user_head_portrait
        from  task_comments tc,`user` u  where tc.open_id=u.open_id and comm_delete=0 and task_id=#{task_id}
    </select>
</mapper>