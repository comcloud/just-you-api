<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.api.mapper.BlogThehall.DynamicCommMapper">
    <resultMap id="Comm" type="com.cloud.api.bean.vo.DynamicCommentsVo">
        <id column="comm_id" property="commId"/>
        <result column="comm_content" property="commContent"/>
        <result column="comm_father_id" property="commFatherId"/>
        <result column="comm_time" property="commTime"/>
        <result column="dynamic_id" property="dynamicId"/>
        <association property="user" javaType="com.cloud.api.bean.vo.UserVo">
            <result column="user_id" property="userId"/>
            <result column="user_name" property="userName"/>
            <result column="open_id" property="openId"/>
            <result column="user_head_portrait" property="userHeadPortrait"/>
        </association>
    </resultMap>
    <insert id="insertComments">
        insert into dynamic_comments
        <set>
            <if test="dynamicId!=null">
                dynamic_id=#{dynamicId},
            </if>
            <if test="openId!=null">
                open_id=#{openId},
            </if>
            <if test="dynacommFatherIdmicId!=null">
                comm_father_id=#{dynacommFatherIdmicId},
            </if>
            <if test="content!=null">
                comm_content=#{content}
            </if>
        </set>
    </insert>

    <insert id="giveALike">
        insert into dynamic_like
            SET give_open_id=#{openId} ,give_dynamic_id=#{dynamicId}
    </insert>

    <delete id="cancelGiveALike">
     delete   from dynamic_like where  give_open_id=#{openId} and give_dynamic_id=#{dynamicId}
    </delete>
    <update id="deleteComm">
        update task_comments SET comm_delete=1 where comm_id=#{commId}
    </update>

    <select id="selectAll" resultMap="Comm">
                 select  d.comm_id,d.comm_content,d.comm_father_id,d.comm_time,d.dynamic_id,d.comm_father_id,u.user_name,u.user_head_portrait,u.open_id
        from  dynamic_comments d ,`user` u where d.open_id=u.open_id and comm_delete=0  and comm_father_id is not Null and  dynamic_id=#{dynamic_id}
    </select>

    <select id="isGiveALike" resultType="java.lang.Integer">
        select  count(*) from dynamic_like where  give_open_id=#{openId} and give_dynamic_id=#{dynamicId}
    </select>

</mapper>